@using UrunStokTakip.Models
@model List<Satislar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Ad</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
        <th>Müşteri Adı Soyadı</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Urun.Ad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td><img src="@item.Resim" width="60" height="120" /></td>
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
                <td>@item.Kullanici.Ad @item.Kullanici.Soyad</td>
            </tr>
        }

    </tbody>
</table>
