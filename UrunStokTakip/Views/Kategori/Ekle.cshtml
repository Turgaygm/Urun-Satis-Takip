@model UrunStokTakip.Models.Kategori
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post, new { @class = "form-control" }))
{
<br />
<br />
    <div class="container">
        <br />
        <div class="row">
            <div class="col-md-4">
                <table>
                    <tr>
                        <td><label>Kategori Ad</label></td>
                        <td>@Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <td><label>Acıklama</label></td>
                        <td>@Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })</td>
                    </tr>
                </table>
                <button type="submit" class="btn btn-default">Ekle</button>
            </div>
        </div>
    </div>
}

